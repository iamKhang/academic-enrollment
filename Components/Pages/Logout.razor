@page "/logout"
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager Navigation

<PageTitle>Đăng xuất</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full">
        <div class="bg-white shadow-lg rounded-lg p-8 text-center">
            <i class="fas fa-sign-out-alt text-blue-600 text-6xl mb-6"></i>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Đang đăng xuất...</h2>
            <div class="flex justify-center">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            // Redirect to the logout endpoint (POST) by submitting a form
            Navigation.NavigateTo("/auth/logout", forceLoad: true);
        }
    }
}
